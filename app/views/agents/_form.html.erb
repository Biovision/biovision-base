<%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

<%= form_for entity do |f| %>
    <table>
      <tbody>
      <tr>
        <th><%= f.label :name %></th>
        <td><%= f.text_field :name, size: 50, maxlenght: 250, required: true %></td>
      </tr>
      <tr>
        <th><%= f.label :browser_id %></th>
        <td><%= f.select :browser_id, browsers_for_select %></td>
      </tr>
      <tr>
        <td colspan="2" class="flags">
          <ul>
            <li>
              <%= f.check_box :active %>
              <%= f.label :active %>
            </li>
            <li>
              <%= f.check_box :mobile %>
              <%= f.label :mobile %>
            </li>
            <li>
              <%= f.check_box :bot %>
              <%= f.label :bot %>
            </li>
          </ul>
        </td>
      </tr>
      </tbody>
      <tfoot>
      <tr>
        <td colspan="2"><%= f.button t(:save), type: :submit %></td>
      </tr>
      </tfoot>
    </table>
<% end %>
