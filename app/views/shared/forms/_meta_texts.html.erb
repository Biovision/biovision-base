<% model_name = f.object.class.to_s.underscore %>
<dt><%= f.label :meta_title %></dt>
<dd>
  <%=
    f.text_field(
        :meta_title,
        id:        "#{model_name}_meta_title",
        size:      nil,
        maxlength: 250,
        data:      {
            check: :meta_title
        }
    )
  %>
  <div class="check-result-error hidden" data-field="meta_title"></div>
  <div class="guideline"><%= t('.guidelines.meta_title') %></div>
</dd>

