<%
  entity = f.object unless local_assigns[:entity]
  model_name = entity.class.to_s.underscore unless local_assigns[:entity]
%>
<dt><%= t(:flags) %></dt>
<dd>
  <ul class="flags">
    <% entity.class.toggleable_attributes.each do |flag| %>
      <li>
        <%= f.check_box flag, id: "#{model_name}_flag" %>
        <%= f.label flag %>
      </li>
    <% end %>
  </ul>
</dd>
