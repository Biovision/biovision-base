<figure class="image"><%= simple_image_preview(entity) %></figure>
<div class="data">
  <div><%= admin_entity_link(entity) %></div>
  <div class="info">
    <%= entity.slug %>
  </div>
  <% unless entity.url.blank? %>
    <div class="info">
      URL: <%= entity.url %>
    </div>
  <% end %>
  <% unless entity.language.nil? %>
    <div class="secondary info">
      <%= t('activerecord.attributes.editable_page.language') %>:
      <%= language_name(entity.language) %>
    </div>
  <% end %>
  <% unless entity.nav_group.nil? %>
    <div class="secondary info">
      <%= t('activerecord.attributes.editable_page.nav_group') %>:
      <%= entity.nav_group %>
    </div>
  <% end %>

  <%= render(partial: 'shared/admin/toggle', locals: { entity: entity }) %>

  <ul class="actions">
    <li><%= edit_icon(edit_editable_page_path(id: entity.id)) %></li>
    <% unless entity.url.blank? %>
      <li><%= world_icon(entity.url, t(:view_as_visitor), locale: entity.language&.code) %></li>
    <% end %>
    <%= render(partial: 'shared/admin/priority', locals: { entity: entity }) %>
  </ul>
</div>
