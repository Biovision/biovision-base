<% if settings.any? %>
  <section>
    <h2><%= t('.heading') %></h2>

    <%=
      form_with(
          url:    admin_component_settings_path(slug: handler.slug),
          method: :patch,
          local:  true
      ) do
    %>
      <div class="fields">
        <% settings.each do |key, value| %>
          <%=
            render(
                partial: 'admin/components/settings/setting',
                locals: {
                    slug: handler.slug,
                    key: key,
                    value: value,
                    handler: handler
                }
            )
          %>
        <% end %>
      </div>
      <div class="buttons">
        <%= button_tag(t(:update), class: 'button button-save') %>
      </div>
    <% end %>
  </section>
<% end %>
