<section>
  <h2><%= t('.heading') %></h2>

  <%=
    form_with(
        scope:  :key,
        url:    admin_set_parameter_path(slug: handler.slug),
        method: :put,
        local:  true,
        id:     'new-biovision-parameter-form'
    ) do |f|
  %>
    <dl>
      <dt><%= f.label(:slug, t('.slug')) %></dt>
      <dd>
        <%=
          f.text_field(
              :slug,
              value:     '',
              required:  true,
              pattern:   BiovisionComponent::SLUG_PATTERN_HTML,
              title:     t('.guidelines.slug'),
              size:      nil,
              maxlength: BiovisionComponent::SLUG_LIMIT,
              data: {
                  field: :slug
              }
          )
        %>
        <div class="guideline"><%= t('.guidelines.slug') %></div>
      </dd>

      <dt><%= f.label(:value, t('.value')) %></dt>
      <dd>
        <%=
          f.text_field(
              :value,
              value:     '',
              required:  true,
              size:      nil,
              maxlength: BiovisionComponent::VALUE_LIMIT,
              data: {
                  field: :value
              }
          )
        %>
        <div class="guideline"><%= t('.guidelines.value') %></div>
      </dd>
    </dl>
    <div class="buttons">
      <%= button_tag(t(:save), type: :submit, class: 'button-save') %>
    </div>
  <% end %>
</section>
