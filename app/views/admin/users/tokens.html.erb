    <%= admin_user_link(@entity) %>
    <span><%= t('.heading') %></span>
<% end %>

<article>
  <h1><%= t('admin.tokens.index.heading') %></h1>

  <ul class="actions">
    <li><%= back_icon(admin_user_path(id: @entity.id)) %></li>
  </ul>

  <%= paginate @collection %>
  <%= render partial: 'shared/admin/list', locals: { collection: @collection } %>
  <%= paginate @collection %>

  <section>
    <h2><%= t('tokens.new.title') %></h2>

    <%= render partial: 'tokens/form', locals: { entity: @entity.tokens.new } %>
