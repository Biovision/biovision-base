<% model_name = entity.class.to_s.underscore %>
<%=
  form_with(
      model: entity,
      html:  {
          id:   "#{model_name}-form",
          data: { check_url: check_editable_pages_path }
      }
  ) do |f|
%>
  <%= render partial: 'shared/list_of_errors', locals: { entity: entity } %>

  <dl>
    <%= render partial: 'shared/forms/priority', locals: { f: f } %>

    <dt><%= f.label :slug %></dt>
    <dd>
      <%=
        f.text_field(
            :slug,
            id:        "#{model_name}_slug",
            size:      nil,
            maxlength: EditablePage::SLUG_LIMIT,
            required:  true,
            data: {
                check: :slug
            }
        )
      %>
      <div class="check-result-error" data-field="slug"></div>
      <div class="guideline"><%= t('.guidelines.slug') %></div>
    </dd>

    <dt><%= f.label :url %></dt>
    <dd>
      <%=
        f.text_field(
            :url,
            id:          "#{model_name}_url",
            size:        nil,
            maxlength:   EditablePage::META_LIMIT,
            placeholder: t('.placeholders.url'),
            data: {
                check: :url
            }
        )
      %>
      <div class="check-result-error" data-field="url"></div>
      <div class="guideline"><%= t('.guidelines.url') %></div>
    </dd>

    <!--
    <dt><%= f.label :nav_group %></dt>
    <dd>
      <%=
        f.text_field(
            :nav_group,
            id:          "#{model_name}_nav_group",
            size:        nil,
            maxlength:   EditablePage::META_LIMIT,
            placeholder: t('.placeholders.nav_group'),
            data: {
                check: :nav_group
            }
        )
      %>
      <div class="check-result-error" data-field="nav_group"></div>
      <div class="guideline"><%= t('.guidelines.nav_group') %></div>
    </dd>
    -->

    <dt><%= f.label :image %></dt>
    <dd>
      <figure class="preview" role="group" id="<%= model_name %>-image">
        <% if entity.image.blank? %>
          <%= f.label :image, image_tag('biovision/base/placeholders/16x9.svg', alt: '') %>
        <% else %>
          <%= f.label :image, image_tag(entity.image.medium_url, alt: '') %>
        <% end %>
        <figcaption>
          <%=
            f.file_field(
                :image,
                id:     "#{model_name}_image",
                accept: 'image/jpeg,image/png,image/svg+xml',
                data:   { image: "#{model_name}-image" }
            )
          %>
        </figcaption>
      </figure>
      <div class="guideline"><%= t('.guidelines.image') %></div>
    </dd>

    <dt><%= f.label :image_alt_text %></dt>
    <dd>
      <%=
        f.text_field(
            :image_alt_text,
            id:        "#{model_name}_image_alt_text",
            size:      nil,
            maxlength: EditablePage::META_LIMIT,
            data: {
                check: :image_alt_text
            }
        )
      %>
      <div class="check-result-error" data-field="image_alt_text"></div>
      <div class="guideline"><%= t('.guidelines.image_alt_text') %></div>
    </dd>

    <dt><%= f.label :name %></dt>
    <dd>
      <%=
        f.text_field(
            :name,
            id:        "#{model_name}_name",
            size:      nil,
            maxlength: EditablePage::NAME_LIMIT,
            required:  true,
            data: {
                check: :name
            }
        )
      %>
      <div class="check-result-error" data-field="name"></div>
      <div class="guideline"><%= t('.guidelines.name') %></div>
    </dd>

    <dt><%= f.label :body %></dt>
    <dd>
      <%=
        f.text_area(
            :body,
            id:       "#{model_name}_body",
            cols:     80,
            rows:     25,
            required: true,
            data:     {
                wysiwyg: 1,
                check: :body,
                upload_url: admin_ckeditor_path(slug: Biovision::Components::ContentComponent.slug)
            }
        )
      %>
      <div class="check-result-error" data-field="body"></div>
      <div class="guideline"><%= t('.guidelines.body') %></div>
    </dd>

    <%= render partial: 'shared/forms/meta_texts', locals: { f: f } %>
    <%= render partial: 'shared/forms/entity_flags', locals: { f: f } %>
  </dl>

  <%= render 'shared/forms/state_container' %>

  <div class="buttons">
    <%= hidden_field_tag :entity_id, entity.id %>
    <%= f.button t(:save), type: :submit, class: 'button button-save' %>
  </div>
<% end %>

<%= render partial: 'shared/forms/wysiwyg' %>
