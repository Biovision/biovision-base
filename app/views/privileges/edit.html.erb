<% content_for :meta_title, t('.title') %>
<% content_for :breadcrumbs do %>
    <%= link_to(t('admin.privileges.nav_item.text'), admin_privileges_path) %>
    <% @entity.parents.each do |parent| %>
        <% admin_privilege_link(parent) %>
    <% end %>
    <%= admin_privilege_link(@entity) %>
    <span><%= t(:edit) %></span>
<% end %>

<article>
  <h1><%= t('.title') %></h1>
  <ul class="actions">
    <li><%= back_icon(admin_privilege_path(@entity.id)) %></li>
    <% if @entity.can_be_deleted? %>
        <li class="danger"><%= destroy_icon(@entity) %></li>
    <% end %>
  </ul>

  <%= render partial: 'form', locals: { entity: @entity } %>
</article>
